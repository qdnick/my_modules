<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="action_hr_hospital_specialties" model="ir.actions.act_window">
        <field name="name">Specialties</field>
        <field name="res_model">hr_hospital.specialty</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record id="view_specialty_tree" model="ir.ui.view">
        <field name="name">specialty.tree</field>
        <field name="model">hr_hospital.specialty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_specialty_form" model="ir.ui.view">
        <field name="name">specialty.form</field>
        <field name="model">hr_hospital.specialty</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
